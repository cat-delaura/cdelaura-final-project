{% extends '_templates/base.njk' %}


{% set relative_path = "../" %}

{% block content %}
<article class="container">
  <h1>Restaurants of Austin</h1>
  <p>Intro text here.</p>
  
  <div class="row">
    {% for restaurant in restaurants.restaurants %}
    <div clas="col-sm-6 col-lg-4">
      <div class="card" style="width: 18rem;">
        <img src="../img/{{ restaurant.image }}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{ restaurant.name }}</h5>
          <p class="mb-1">{{ restaurant.category }}</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Where: {{ restaurant.address }}</li>
        </ul>
        <div class="card-footer">
          <a href="#" class="card-link">website</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>

</article>
{% endblock %}